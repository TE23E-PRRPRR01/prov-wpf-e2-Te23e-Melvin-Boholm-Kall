{
    "workbench.iconTheme": "vscode-great-icons",
    "editor.codeLens": false,
    "explorer.compactFolders": false,
    "editor.multiCursorModifier": "ctrlCmd",
    "files.autoSave": "afterDelay",
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "csharp.suppressBuildAssetsNotification": true,
    "githubPullRequests.notifications": "off",
    "git.postCommitCommand": "sync",
    "sessionlogger.enabled": true,
    "csharp.debug.console": "externalTerminal",
    "omnisharp.enableMsBuildLoadProjectsOnDemand": true,
    "clock.alignment": "Right",
    "clock.format": "HH:MM",
    "files.associations": {
        "*.xaml": "xml"
    },
    "xml.fileAssociations": [
        {
            "pattern": "**/*.xaml",
            "systemId": "https://raw.githubusercontent.com/karye/xamelot/refs/heads/master/syntax/xaml.xsd"
        }
    ],
    "extensions.allowed": {
        "ms-dotnettools.csharp": true,
        "ms-dotnettools.csharp-devkit": false,
        "emmanuelbeziat.vscode-great-icons": true,
        "chrisdias.vscode-opennewinstance": true,
        "rogalmic.vscode-xml-complete": true,
        "k--kato.docomment": true,
        "redhat.vscode-xml": true,
        "Karye.sessionlogger": true,
        "eliostruyf.vscode-hide-comments": true,
        "richardzampieriprog.csharp-snippet-productivity": true,
        "arcsine.chronicler": true,
        "gabrielgrinberg.auto-run-command": true,
        "angelo-breuer.clock": true,
        "ms-dotnettools.vscodeintellicode-csharp": false,
        "GitHub.copilot": false
  },
    "dotnet.server.useOmnisharp": true,
    "github.copilot.enable": {
        "*": false
    },
    "workbench.editorAssociations": {
        "*.md": "vscode.markdown.preview.editor"
    }
}
